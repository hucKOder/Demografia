<div class="alert alert-info" id="notice" align="center" role="alert"><%= notice %>
  <div>
    Môžete pridávať ďalšie záznamy!
  </div>
</div>

<div class="container">
  <div class="row" align="center">
    <button class="btn btn-primary" id="death">Chcem pridať nový záznam o úmrtiach!</button>
  </div>
  <div class="row" align="center">
    <button class="btn btn-primary" id="birth">Chcem pridať nový záznam o narodeniach!</button>
  </div>
  <div class="row" align="center">
    <button class="btn btn-primary" id="marriage">Chcem pridať nový záznam o sobášoch!</button>
  </div>
  <div class="row" align="center">
    <button class="btn btn-primary" id="divorce">Chcem pridať nový záznam o rozvodoch!</button>
  </div>
  <div class="row" align="center">
    <button class="btn btn-primary" id="migration">Chcem pridať nový záznam o migráciách!</button>
  </div>
</div>

<div class="container" align="center">
  <%= form_tag(addforms_path, method: 'post') do %>
      <h3 class="death line">Pridaj záznam o úmrtiach</h3>
      <h3 class="birth line">Pridaj záznam o narodeniach</h3>
      <h3 class="marriage line">Pridaj záznam o sobášoch</h3>
      <h3 class="divorce line">Pridaj záznam o rozvodoch</h3>
      <h3 class="migration line">Pridaj záznam o migráciách</h3>
      <%= text_field_tag :year, nil, placeholder: "Zadaj rok" , class: "year line death birth marriage divorce migration"%>
      <%= text_field_tag :town, nil,placeholder: "Zadaj mesto", class: "town line death birth marriage divorce migration"%>
      <%= text_field_tag :gender, nil, placeholder: "Zadaj pohlavie", class: "gender line death birth migration" %>
      <%= text_field_tag :age, nil, placeholder: "Zadaj vek", class: "age line death migration" %>

      <%= text_field_tag :emigrants, nil,placeholder: "Zadaj počet vysťahovalcov", class: "emigrants line migration"%>
      <%= text_field_tag :imigrants, nil,placeholder: "Zadaj počet prisťahovalcov", class: "imigrants line migration"%>
      <%= text_field_tag :reason, nil, placeholder: "Zadaj dôvod", class: "reason line migration" %>

      <%= text_field_tag :mother_age, nil, placeholder: "Zadaj vek matky", class: "mother_age line birth" %>
      <%= text_field_tag :count, nil, placeholder: "Zadaj počet", class: "count line death birth divorce marriage"  %>

      <%= text_field_tag :gender_petition, nil, placeholder: "Pohlavie podalo návrh", class: "gender_petition line divorce" %>
      <%= text_field_tag :women_age, nil,placeholder: "Zadaj vek ženy", class: "women_age line divorce"%>
      <%= text_field_tag :man_age, nil,placeholder: "Zadaj vek muža", class: "man_age line divorce"%>
      <%= text_field_tag :verdict, nil, placeholder: "Zadaj rozhodnutie", class: "verdict line divorce" %>
      <%= text_field_tag :duration, nil,placeholder: "Zadaj dĺžku trvania", class: "duration line divorce"%>


      <%= text_field_tag :bride_age, nil,placeholder: "Zadaj vek nevesty", class: "bride_age line marriage"%>
      <%= text_field_tag :fiance_age, nil,placeholder: "Zadaj vek ženícha", class: "fiance_age line marriage"%>
      <%= text_field_tag :number, nil,placeholder: "Zadaj podarie", class: "number line marriage"%>


      <%= submit_tag 'Pridaj záznam o úmrtiach' , class: "btn-primary line death"%>
      <%= submit_tag 'Pridaj záznam o narodeniach' , class: "btn-primary line birth"%>
      <%= submit_tag 'Pridaj záznam o rozvodoch' , class: "btn-primary line divorce"%>
      <%= submit_tag 'Pridaj záznam o migráciách' , class: "btn-primary line migration"%>
      <%= submit_tag 'Pridaj záznam o sobášoch' , class: "btn-primary line marriage"%>
  <% end %>
</div>
<script>
    $(document).on("click","#death",function(){
        $(".death ").css("display", "block");
        $(".btn").hide();
    });
    $(document).on("click","#birth",function(){
        $(".birth").css("display", "block");
        $(".btn").hide();
    });
    $(document).on("click","#divorce",function(){
        $(".divorce").css("display", "block");
        $(".btn").hide();
    });
    $(document).on("click","#marriage",function(){
        $(".marriage").css("display", "block");
        $(".btn").hide();
    });
    $(document).on("click","#migration",function(){
        $(".migration").css("display", "block");
        $(".btn").hide();
    });
</script>